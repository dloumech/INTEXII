@{
    ViewData["Title"] = "Delete Record";
}

@model Burialmain

@*A confirmation page for deleting. This give the user a chance to go back if they don't want to delete. Will then route to Burial Records upon deletion*@

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Id?</h3>
<p>Burial ID: @Model.Burialid. Burial Num: @Model.Burialnumber </p>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="BurialRecord" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="Id" />
</form>